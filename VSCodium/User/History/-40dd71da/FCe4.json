{
    "git.openRepositoryInParentFolders": "always",
    "editor.minimap.enabled": false,
    "workbench.preferredDarkColorTheme": "Gruvbox Dark Hard",
    "editor.wordWrap": "on",
    "editor.fontSize": 13,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.startupEditor": "none",
    "files.associations": {
        "*.dconf": "properties",
        "*.config": "properties",
        "*.toml": "properties",
        "*.kvconfig": "properties"
    },
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Propo",
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.defaultProfile.linux": "bash",
    "workbench.colorCustomizations": {
        //"terminal.background": "#282828",
        //"terminal.foreground": "#EBDBB2",
        //"terminalCursor.background": "#EBDBB2",
        //"terminalCursor.foreground": "#282828",
        "terminal.ansiBlack": "#282828",
        "terminal.ansiRed": "#CC241D",
        "terminal.ansiGreen": "#98971A",
        "terminal.ansiYellow": "#D79921",
        "terminal.ansiBlue": "#458588",
        "terminal.ansiMagenta": "#B16286",
        "terminal.ansiCyan": "#689D6A",
        "terminal.ansiWhite": "#A89984",
        "terminal.ansiBrightBlack": "#928374",
        "terminal.ansiBrightRed": "#FB4934",
        "terminal.ansiBrightGreen": "#B8BB26",
        "terminal.ansiBrightYellow": "#FABD2F",
        "terminal.ansiBrightBlue": "#83A598",
        "terminal.ansiBrightMagenta": "#D3869B",
        "terminal.ansiBrightCyan": "#8EC07C",
        "terminal.ansiBrightWhite": "#EBDBB2"
    }
